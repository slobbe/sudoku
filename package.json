{
  "name": "sudoku-next-pwa",
  "version": "0.3.4",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.3.6",
  "scripts": {
    "dev": "next dev",
    "build": "bun run build:packages && next build",
    "build:packages": "bun run build:pkg:engine && bun run build:pkg:board",
    "build:pkg:engine": "tsc -p packages/sudoku-engine/tsconfig.build.json",
    "build:pkg:board": "tsc -p packages/sudoku-board/tsconfig.build.json && node packages/sudoku-board/scripts/copy-css.mjs",
    "start": "next start",
    "lint": "eslint .",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@slobbe/sudoku-board": "workspace:*",
    "@slobbe/sudoku-engine": "workspace:*",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/bun": "^1.3.9",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.16.0",
    "eslint-config-next": "^16.1.6",
    "typescript": "^5.7.2"
  }
}
