{
  "name": "sudoku-pwa",
  "version": "0.6.2",
  "description": "Sudoku Progressive Web App built with Next.js, React, and TypeScript.",
  "author": "Sebastian Lobbe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/slobbe/sudoku"
  },
  "homepage": "https://slobbe.github.io/sudoku/",
  "bugs": {
    "url": "https://github.com/slobbe/sudoku/issues"
  },
  "keywords": [
    "sudoku",
    "pwa",
    "nextjs",
    "react",
    "typescript"
  ],
  "engines": {
    "node": ">=20.9.0",
    "bun": ">=1.3.6"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.3.6",
  "scripts": {
    "dev": "next dev",
    "build": "bun run build:packages && next build",
    "build:packages": "bun run build:pkg:engine && bun run build:pkg:board",
    "build:pkg:engine": "tsc -p packages/sudoku-engine/tsconfig.build.json",
    "build:pkg:board": "tsc -p packages/sudoku-board/tsconfig.build.json && node packages/sudoku-board/scripts/copy-css.mjs",
    "start": "next start",
    "lint": "eslint .",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@slobbe/sudoku-board": "workspace:*",
    "@slobbe/sudoku-engine": "workspace:*",
    "lucide-react": "^0.575.0",
    "next": "^16.1.6",
    "nostr-tools": "^2.23.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/bun": "^1.3.9",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.16.0",
    "eslint-config-next": "^16.1.6",
    "typescript": "^5.7.2"
  }
}
